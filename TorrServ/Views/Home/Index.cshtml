                </tr>   
                @*<tr>                    
                    <td><div class="btn text-white">Enter a search parameter:</div></td>
                </tr>*@
                <tr>                   
                    <th><input id="Inp_Title" class="btn btn-dark text-white" size="7" /></th>
                    <th><input id="Inp_Genre" class="btn btn-dark text-white" size="4" /></th>
                    <th><input id="Inp_Country" class="btn btn-dark text-white" size="3" /></th>
                    <th><input id="Inp_EarOfIssue" class="btn btn-dark text-white" size="7" /></th>
                    <th><input id="Inp_VideoQuality" class="btn btn-dark text-white" size="7" /></th>
                    <th><input id="Inp_Size" class="btn btn-dark text-white" size="7" /></th>
                    <th><input id="Inp_CommentIndex" class="btn btn-dark text-white" size="7" value="min" name="name" /></th>
                    <th><input id="Inp_Downloads" class="btn btn-dark text-white" size="7" /></th>
                    <th><input id="Inp_PathDowLoad" class="btn btn-dark text-white" size="8" /></th>
                </tr>
            </thead>
            <tbody id="moviescontainer">
                
