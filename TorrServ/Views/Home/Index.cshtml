    <div class="">         
        <table id="dataTable" class="table">
            <thead>
                <tr>
                    <th ><button id="Btn_Title" type="button" class="btn btn-dark text-white">Title</button></th>
                    <th><button id="Btn_Genre" type="button" class="btn btn-dark"> Genre </button></th>
                    <th><button id="Btn_Country" type="button" class="btn btn-dark">Country</button></th>
                    <th><button id="Btn_EarOfIssue" type="button" class="btn btn-dark">EarOfIssue</button></th>
