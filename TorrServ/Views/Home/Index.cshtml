                @foreach (var mov in Model)
                {

                    <tr id="moviePack" class="btn-dark">
                        <td><div class="title">@mov.title</div></td>
                        <td>@mov.genre</td>
                        <td>@mov.country</td>
                        <td>@mov.earOfIssue</td>
                        <td>@mov.videoQuality</td>
                        <td>@mov.size</td>
                        <td>@mov.commentIndex</td>
                        <td>@mov.downloads</td>
                        <td><a href="@mov.pathDownLoad">Download</a></td>
                    </tr>
                }

            </tbody>            
        </table>    
